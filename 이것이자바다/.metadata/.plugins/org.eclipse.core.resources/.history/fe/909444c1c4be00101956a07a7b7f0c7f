package leetcode;

import java.util.Arrays;
import java.util.HashMap;
import java.util.Map;

public class Solution {

	public static void main(String[] args) {
//		System.out.println(closeStrings("abbbbc", "bcaaab"));

		int[][] grid = { { 3, 1, 2, 2 }, { 1, 4, 4, 5 }, { 2, 4, 2, 2 }, { 2, 4, 2, 2 } };
		System.out.println(equalPairs(grid));
	}

	// LeetCode75 > HashMap/Set > 2352
	public static int equalPairs(int[][] grid) {
		
		int answer = 0;
		
		// col[0]을 key로 나머지 배열을 value로 저장
		Map<Integer, int[]> map = new HashMap<Integer, int[]>();
		for (int[] arr : grid) {
			map.put(arr[0], Arrays.copyOfRange(arr, 1, arr.length));
		} 
		map.forEach((key, val)->{
			System.out.println(key + " : " + Arrays.toString(val));
		});

		// grid[0][i]를 순회하면서 key와 매칭
		// 매칭되면 그 다음 숫자들을 key.values와 비교
		for (int i = 0; i < grid.length; i++) {
			int[] temp = map.getOrDefault(grid[0][i], null);
			int cnt = 0;
			
			if(temp == null) continue;		// key 없으면 그대로 넘어감
			
			for(int j = 1; j < grid.length; j++) {
				if(grid[j][i] != temp[j-1]) continue;
				cnt++;
			}
			if(cnt == grid.length) answer++;
			
		}

		return answer;
	}

	// LeetCode75 > HashMap/Set > 1675
	public static boolean closeStrings(String word1, String word2) {

		// 길이 다르면 false
		if (word1.length() != word2.length())
			return false;

		// frequency of alphabets
		int[] cnt1 = new int[26];
		int[] cnt2 = new int[26];

		// 순회하면서 알파벳과 빈도수 적용
		for (int i = 0; i < word1.length(); i++) {
			cnt1[word1.charAt(i) - 'a']++;
			cnt2[word2.charAt(i) - 'a']++;
		}

		// 순회하면서 알파벳 다른게 있는지 확인
		for (int i = 0; i < 26; i++) {
			if ((cnt1[i] != 0 && cnt2[i] == 0) || (cnt1[i] == 0 && cnt2[i] != 0))
				return false;
		}

		// 개수 정렬
		Arrays.sort(cnt1);
		Arrays.sort(cnt2);
		for (int i = 0; i < cnt1.length; i++) {
			if (cnt1[i] != cnt2[i])
				return false;
		}

		return true;
	}

}
