package ch15.sec03.exam02;

import java.util.HashSet;
import java.util.Iterator;
import java.util.Set;
 

public class HashSetEx {

	public static void main(String[] args) {
		
		Set<Member> set = new HashSet<>();
		
		set.add(new Member("빨강머리앤", 15));
		set.add(new Member("하니", 14));
		set.add(new Member("하이디", 13));
		set.add(new Member("영심이", 10));
		set.add(new Member("성냥팔이소녀", 20));
		
		System.out.println("set.size = " + set.size());
		System.out.println();
		
		// 하나씩 가져와서 처리
		Iterator<Member> iter = set.iterator();
		while(iter.hasNext()) {
			Member m = iter.next();
			System.out.println(m);
			
			// 1. 객체 제거 - 반복자 사용
			if(m.equals(new Member("하니", 14))) {
				iter.remove();
			}
		}
		
		// 2. 객체 제거
		System.out.println();
		set.remove(new Member("하이디", 13));
		
		System.out.println(set);
		
		
	}
}
